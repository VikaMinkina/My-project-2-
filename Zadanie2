using System.Collections.Generic;
using UnityEngine;

[System.Serializable]
public class Machine
{
    public string name;
    public int power;
    public bool isRunning;
}

public class MachineManager : MonoBehaviour
{
    public static MachineManager Instance { get; private set; }

    private Machine currentMachine;

    private void Awake()
    {
        if (Instance == null)
        {
            Instance = this;
            DontDestroyOnLoad(gameObject);
        }
        else
        {
            Destroy(gameObject);
        }
    }

     public void LoadMachine(string filePath)
    {
        StartCoroutine(LoadMachineCoroutine(filePath));
    }

    private IEnumerator LoadMachineCoroutine(string filePath)
    {
        using (UnityWebRequest www = UnityWebRequest.Get(filePath))
        {
            yield return www.SendWebRequest();

            if (www.result!= UnityWebRequest.Result.Success)
            {
                Debug.LogError(www.error);
            }
            else
            {
                currentMachine = JsonUtility.FromJson<Machine>(www.downloadHandler.text);
                Debug.Log("Machine loaded successfully");
            }
        }
    }

    public void SaveMachine(string filePath)
    {
        string jsonData = JsonUtility.ToJson(currentMachine);
        File.WriteAllBytes(filePath, System.Text.Encoding.UTF8.GetBytes(jsonData));
        Debug.Log("Machine saved successfully");
    }
}
